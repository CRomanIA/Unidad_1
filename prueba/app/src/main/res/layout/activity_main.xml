<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A7A2A2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="7"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnOcho"
        app:layout_constraintEnd_toStartOf="@+id/btnOcho" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="clickBoton"
        android:text="/"
        app:layout_constraintEnd_toEndOf="@+id/btnAC"
        app:layout_constraintTop_toBottomOf="@+id/btnAC" />

    <TextView
        android:id="@+id/tvPantalla"
        android:layout_width="391dp"
        android:layout_height="260dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDos"
        app:layout_constraintEnd_toStartOf="@+id/btnDos" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="clickBoton"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/btnMultiplicacion"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplicacion" />

    <Button
        android:id="@+id/btnMultiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="clickBoton"
        android:text="X"
        app:layout_constraintEnd_toEndOf="@+id/btnDivision"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="BORRAR"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAC"
        app:layout_constraintEnd_toStartOf="@+id/btnAC" />

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="9"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDivision"
        app:layout_constraintEnd_toStartOf="@+id/btnDivision" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="8"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnNueve"
        app:layout_constraintEnd_toStartOf="@+id/btnNueve" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="6"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMultiplicacion"
        app:layout_constraintEnd_toStartOf="@+id/btnMultiplicacion" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMenos"
        app:layout_constraintEnd_toStartOf="@+id/btnMenos" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSeis"
        app:layout_constraintEnd_toStartOf="@+id/btnSeis" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="clickBoton"
        android:text="+"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/btnMenos"
        app:layout_constraintTop_toBottomOf="@+id/btnMenos" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnTres"
        app:layout_constraintEnd_toStartOf="@+id/btnTres" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMas"
        app:layout_constraintEnd_toStartOf="@+id/btnMas" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCero"
        app:layout_constraintEnd_toStartOf="@+id/btnCero" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnIgual"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="clickBoton"
        android:text="4"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCinco"
        app:layout_constraintEnd_toStartOf="@+id/btnCinco" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:onClick="clickBoton"
        android:text="AC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPantalla" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="184dp"
        android:layout_height="47dp"
        android:layout_marginEnd="12dp"
        android:onClick="clickBoton"
        android:text="Salir"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnBorrar"
        app:layout_constraintEnd_toStartOf="@+id/btnBorrar" />

</androidx.constraintlayout.widget.ConstraintLayout>